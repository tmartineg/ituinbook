@using ReadAndLearn.Models;
@model ReadAndLearn.Models.Pregunta
@using System.Text.RegularExpressions;



@{
    ViewBag.Title = "PL4_Pregunta";
    Layout = "~/Views/Shared/_LayoutNada.cshtml";
    DatosUsuario du = (DatosUsuario)ViewBag.DatosUsuario;
    ConfigModulo configModulo = (ConfigModulo)ViewBag.ConfigModulo;
    ConfigPregunta configPregunta = (ConfigPregunta)ViewBag.ConfigPregunta;
    DatoSimple dsel = (DatoSimple)ViewBag.Seleccion;
    DatoSimple dsResp = (DatoSimple)ViewBag.Respuesta;
    Regex regex = new Regex(string.Format("\\{0}.*?\\{1}", '<', '>'));
    
    IOrderedEnumerable<Alternativa> lista = Model.Alternativas.ToList().OrderBy(item => item.PreguntaID);

    if (configPregunta != null && configPregunta.AleatorizarAlternaitvasIntento2Test)
    {
        lista = Model.Alternativas.OrderBy(item => Guid.NewGuid());
    }
}


<div style="margin: 15px 20px;" id="areaPregunta">
    @if (configModulo != null && configModulo.Puntos)
    {
        <div style="float:right;">
            <b>PUNTOS:</b>
            <span style="padding-left: 5px;" id="puntos">@du.Puntos</span>
        </div>
    }

    <div id=enunciado style="padding-left: 20px; padding-right: 20px;">
        @Html.Raw(Model.Enunciado)    
        @if (Model.Ayuda != null)
        {
            <div id="ayuFlotador" hidden="hidden"; style="border-style:solid; border-color:#b0c4de; background-color:#e0ffff; width:50%;"><img width="12" height="12" style="padding-left: 5px; padding-right: 5px;" src="~/Content/Ayudas/ayuda_flotador.jpg" /><b>@Model.Ayuda.ParafraseoN1</b></div>
        }
    </div>
     
    <div id=alternativas style="padding-left: 20px; padding-right: 20px;">
        <ul>
        @foreach (Alternativa alt in lista)
        {
            if (dsResp.Info == alt.Opcion)
            {
                if (configPregunta != null && configPregunta.MarcarPrimerCorrecto)
                {
                    <img src="~/Content/aspa.png" style="width: 15px; height: 15px; margin-left: -19px;" />
                }

                if (configPregunta != null && configPregunta.SegundoIntentosOriginal)
                {
                    if (alt.Opcion != null)
                    {
                    @Html.RadioButtonFor(r => alt, alt.Opcion, new { @class = "radio", @style = "width:20px" }) @Html.Raw(alt.Opcion) <br />
                    }
                    else
                    {
                    @Html.RadioButtonFor(r => alt, "null", new { @class = "radio", @style = "width:20px" }) @Html.Raw(alt.Opcion) <br />
                    }
                }
                else // No funciona SegundoIntentoNoOriginal. Habilitas los radiobuttom desde PL4_Texto y no tiene en cuenta cuál es la respuesta anterior
                {
                    if (alt.Opcion != null)
                    {
                        @Html.RadioButtonFor(r => alt, alt.Opcion, new { @class = "radio", @style = "width:20px", disabled = "disabled" }) @Html.Raw(alt.Opcion) <br />
                    }
                    else
                    {
                        @Html.RadioButtonFor(r => alt, "null", new { @class = "radio", @style = "width:20px", disabled = "disabled" }) @Html.Raw(alt.Opcion) <br />
                    }
                }
            }
            else
            {
                if (alt.Opcion != null)
                {
                    @Html.RadioButtonFor(r => alt, alt.Opcion, new { @class = "radio", @style = "width:20px" }) @Html.Raw(alt.Opcion) <br />
                }
                else
                {
                    @Html.RadioButtonFor(r => alt, "null", new { @class = "radio", @style = "width:20px" }) @Html.Raw(alt.Opcion) <br />
                }
            }
        }
        </ul>
    </div>

    
    @if (ViewBag.TareaSel)
    {
        if (configPregunta != null && configPregunta.CorregirSeleccion)
        {
            <div style="padding-left: 20px; padding-right: 20px;">
