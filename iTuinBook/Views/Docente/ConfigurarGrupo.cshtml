@model iTuinBook.Models.ConfigGrupo

@{
    ViewBag.Title = "ConfigurarGrupo";
    Layout = "~/Views/Shared/_LayoutDocente.cshtml";
}

<h2>Configurar Grupo</h2>
<hr />
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>ConfigGrupo</legend>

        @Html.HiddenFor(model => model.ConfigGrupoID)
        @Html.HiddenFor(model => model.GrupoID)

        <div class="editor-label">
            @Html.LabelFor(model => model.AutoChange)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AutoChange)
            @Html.ValidationMessageFor(model => model.AutoChange)
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}

<div>
    <b>@Html.ActionLink("Volver", "AdministrarGrupo", "Docente", new { GrupoID = Model.GrupoID }, null)</b>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
     
    <script src="~/Content/KendoUI/js/kendo.web.min.js"></script>
    
    <link href="~/Content/KendoUI/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/KendoUI/styles/kendo.default.min.css" rel="stylesheet" />
    <link href="~/Content/KendoUI/styles/kendo.all.min.js" rel="stylesheet" />
    
    <script type="text/javascript">
        $(document).ready(function () {
            $("#menuCategorias").kendoMenu({
                orientation: "vertical"
            }).css({
                width: auto,
                marginRight: "220px"
            });
        });
    </script>
}

