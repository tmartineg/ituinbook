@using ReadAndLearn.Models;
@model ReadAndLearn.Models.Texto

@{
    ViewBag.Title = "Unidad";
    Layout = "~/Views/Shared/_LayoutNada.cshtml";
    DatosUsuario du = (DatosUsuario)ViewBag.DatosUsuario;
}

<div id="tools">
    <div>
        @Html.ActionLink("Preguntas", "PL5_Pregunta", new { GrupoID = du.GrupoID, ModuloID = du.ModuloID, preguntaActual = du.PreguntaActual, textoID = Model.TextoID, id = "btnPreguntas" }, new { @style="padding: 3px 5px; margin: 2px; color: white; text-decoration: none; font-family: Tahoma; font-size: 12px; background-color: #DB5C04;" })
    </div>
</div>

<div>	    
    
	<hr style="margin-top:10px" />
	
	@foreach(Pagina pag in Model.Paginas)
    {
        <div class="paginas" style="padding-bottom:50px;">@Html.Raw(Model.Paginas.First().Contenido);</div>
    }
        
	
</div>	

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>        
}