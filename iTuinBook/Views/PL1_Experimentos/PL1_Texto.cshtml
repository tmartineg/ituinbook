@using iTuinBook.Models;
@model iTuinBook.Models.Texto

@{
    ViewBag.Title = "Texto";
    Layout = "~/Views/Shared/_LayoutNada.cshtml";
    DatosUsuario du = (DatosUsuario)ViewBag.DatosUsuario;
    Pregunta preg = (Pregunta)ViewBag.Pregunta;
}

<div id="pregunta">
    @switch (preg.TipoPreguntaID)
    {
        case 0: // Test
            @Html.Action("PL1_Pregunta_Test", "PL1_Experimentos", new { GrupoID = @du.GrupoID, ModuloID = du.ModuloID, preguntaActual = du.PreguntaActual, textoID = du.TextoID });    
            break;
        case 1:
             @Html.Action("PL1_Pregunta_Test", "PL1_Experimentos", new { GrupoID = @du.GrupoID, ModuloID = du.ModuloID, preguntaActual = du.PreguntaActual, textoID = du.TextoID });    
            break;
        case 2:
            
        case 3:
            
        default:
            break;
    }
    
</div>

<div>
	<hr style="margin-top:10px" />
	
    <button value="Pregunta" id="btnPregunta">Pregunta</button>

	@foreach(Pagina pag in Model.Paginas)
    {
        <div class="paginas" style="padding-bottom:50px;">@Html.Raw(Model.Paginas.First().Contenido);</div>
    }
</div>	

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnPregunta").click(function () {
                $("#pregunta").toggle();
            });
        });
    </script>        
}