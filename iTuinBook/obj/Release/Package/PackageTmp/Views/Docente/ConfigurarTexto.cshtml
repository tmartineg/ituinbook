@model ReadAndLearn.Models.ConfigTexto

@{
    ViewBag.Title = "ConfigurarTexto";
    Layout = "~/Views/Shared/_LayoutDocente.cshtml";
}

<h2>Configurar Texto</h2>
<hr />

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>ConfigTexto</legend>

        @Html.HiddenFor(model => model.ConfigTextoID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Marcado)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Marcado)
            @Html.ValidationMessageFor(model => model.Marcado)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Notas)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Notas)
            @Html.ValidationMessageFor(model => model.Notas)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Indice)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Indice)
            @Html.ValidationMessageFor(model => model.Indice)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Busqueda)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Busqueda)
            @Html.ValidationMessageFor(model => model.Busqueda)
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver", "AdministrarTexto", "Docente", new { TextoID = Model.TextoID }, null)    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
