                                            //set datosRaw on sessionStorage
                                            var cadena = "url:[" + this.url + "]__data:[" + this.data.replace(/&/g, "_") + "]";
                                            datosRaw[numAcc] = cadena;
                                            sessionStorage.setItem("datosRaw", JSON.stringify(datosRaw));

                                            //set datosRaw on ajax petition
