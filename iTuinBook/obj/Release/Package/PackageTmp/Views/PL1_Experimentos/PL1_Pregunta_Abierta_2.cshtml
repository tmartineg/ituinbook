            {
                if (configModulo.Ayudas)
                {   
                    @: $('#ayudas').show();
                    @: $('#ayudas').css("visibility", "visible")
                }
                else
                {
                    if (configPregunta.Ayuda)
                    {
                        @: $('#ayudas').show();
                        @: $('#ayudas').css("visibility", "visible")
                    }
                    else
                    {
                        @: $('#ayudas').hide();
                        @: $('#ayudas').css("visibility", "hidden")
                    }
                }  
            }              

            /**************************************/
            /**************************************/
            
            //guirisan/secuencias
            //datetime set in client
            var datetimeclient = new Date().toISOString();

            //NUMACC

